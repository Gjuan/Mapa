<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gjuan.calculadora.Principal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese n1:" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="24dp"
        android:id="@+id/Textuno" />

    <TextView
        android:text="Ingrese n2:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/Textuno"
        android:layout_alignLeft="@+id/Textuno"
        android:layout_alignStart="@+id/Textuno" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="19dp"
        android:id="@+id/Txtdos"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnsuma"
        android:layout_toRightOf="@+id/btnsuma"
        android:id="@+id/btnresta"
        android:layout_alignBottom="@+id/btnsuma" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnmultiplicacion"
        android:layout_toRightOf="@+id/btnmultiplicacion"
        android:id="@+id/btndivision" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/btnsuma"
        android:layout_below="@+id/Txtdos"
        android:layout_alignLeft="@+id/Txtdos"
        android:layout_alignStart="@+id/Txtdos"
        android:layout_alignRight="@+id/Txtresul"
        android:layout_alignEnd="@+id/Txtresul" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnmultiplicacion"
        android:layout_below="@+id/btnresta"
        android:layout_alignRight="@+id/Txtresul"
        android:layout_alignEnd="@+id/Txtresul"
        android:layout_marginTop="12dp"
        android:layout_alignLeft="@+id/Txtresul"
        android:layout_alignStart="@+id/Txtresul" />

    <TextView
        android:text="Resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/Txtresul"
        android:layout_below="@+id/btndivision"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />
</RelativeLayout>

